<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.saktiva.tamanwisataselecta.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
-------logo------------
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/logos"
                android:layout_gravity="center"
                />
------flip foto----
            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/ViewFlipper"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@drawable/s1"
                    android:gravity="bottom"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@drawable/s4"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:gravity="bottom"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@drawable/s3"
                    android:gravity="bottom"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@drawable/s2"
                    android:gravity="bottom"
                    />
            </ViewFlipper>

-----menu baris ke 1--------
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"

                    >
                    <ImageButton
                        android:id="@+id/ib_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/profile"
                        android:scaleType="fitXY"
                        android:background="@null"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:text="Tentang Kami"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >
                    <ImageButton
                        android:id="@+id/ib_resto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/resto"
                        android:scaleType="fitXY"
                        android:background="@null"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:text="Restaurant"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:textColor="@color/orenTua"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >

                    <ImageButton
                        android:id="@+id/ib_wahana"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/wahana"
                        android:scaleType="fitXY"
                        android:background="@null"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:text="Wahana"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAquaDark"
                        />

                </LinearLayout>


            </LinearLayout>

    -------menu baris ke 2--------
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >
                    <ImageButton
                        android:id="@+id/ib_harga"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/list"
                        android:scaleType="fitXY"
                        android:background="@null"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:text="Daftar Harga"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:textColor="@color/kuningTua"
                        android:textStyle="bold"
                        android:id="@+id/textView" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >
                    <ImageButton
                        android:id="@+id/ib_maps"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/maps"
                        android:scaleType="fitXY"
                        android:background="@null"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:text="Lokasi"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:textColor="@color/biru"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >
                    <ImageButton
                        android:id="@+id/ib_kontak"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/kontak"
                        android:scaleType="fitXY"
                        android:background="@null"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:text="Kontak"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/biru"
                        />

                </LinearLayout>


            </LinearLayout>

            ---foto--

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:weightSum="1"
                android:background="@color/bg"
                >
                <ImageView
                    android:id="@+id/fotopicasso"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:gravity="bottom"
                    />

            </LinearLayout>

            -----view text----

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:padding="8dp"
                        android:text="@string/harga_tiket"
                        android:textSize="12sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:id="@+id/textView3"
                        />

                    <TextView
                        android:id="@+id/tv_selengkapnya1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:textAlignment="textStart"
                        android:text="Baca Selengkapnya..>"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />

                </LinearLayout>
---2---
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:padding="8dp"
                        android:text="@string/alamat"
                        android:textSize="12sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tv_selengkapnya2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:textAlignment="textStart"
                        android:text="Baca Selengkapnya..>"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
